{
    "manifest_version": 3,
    "name": "Rok - Nepali Ad Blocker",
    "version": "0.0.1",
    "description": "Blocks ads from Nepali websites starting with onlinekhabar",
    "permissions": [
        "activeTab",
        "storage",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "*://*.onlinekhabar.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.onlinekhabar.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Rok Ad Blocker",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "nepali_ads_rules",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    }
}